<div class="huskWrap" ng-repeat="rest in rests">

    <div class="info">
        <h1>{{rests[0].title}}</h1>
        <h4>{{rests[0].phone}}</h4>
        <h4>{{rests[0].address}}</h4>
        <h4><a href="{{rests[0].site}}">{{rests[0].site}}</a></h4>
    </div>
    <input class="menuSearch" type="text" ng-model="search" placeholder="Search menu items">
    <div class="menuWrap">
    <div class="menu col-md-8 col-md-offset-2 clr">
        <div class="col-xs-12" ng-class-odd="'odd'" ng-repeat="item in items | filter: search">
        {{item.description}} <span>${{item.item_price}}</span>
        </div>
    </div>
</div>
</div>
